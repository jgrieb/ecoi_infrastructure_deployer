[Unit]
Description=Prometheus
Wants=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory={{ prometheus.dir }}
ExecStart={{ prometheus.dir }}/prometheus --config.file {{ prometheus.dir }}/prometheus.yml --web.console.templates {{ prometheus.dir }}/consoles --web.console.libraries {{ prometheus.dir }}/console_libraries --web.listen-address='127.0.0.1:{{ prometheus.http_internal_port }}'
ExecStartPost={{ server.apps_dir}}/check_port.sh {{ prometheus.http_internal_port }} 60 5
User={{ server.user }}
PermissionsStartOnly=true
Restart=always

[Install]
WantedBy=multi-user.target